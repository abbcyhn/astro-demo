---
import type { CollectionEntry } from 'astro:content';

interface Props {
    article: CollectionEntry<'articles'>;
};

const { article } = Astro.props;
---

<article class="bg-surface/10 rounded-xl shadow-card p-5 border border-border/30 card-hover">
    <div class="flex items-start justify-between">
        <a href={`/blog/${article.slug}`}>
            <h3 class="text-2xl font-bold mb-3 cursor-pointer hover:text-blue-300">{article.data.title}</h3>
        </a>
    </div>
    <p class="text-text-muted text-base leading-relaxed mb-6 line-clamp-2">{article.body}</p>
    <a href={`/blog/${article.slug}`} class="inline-flex items-center text-text hover:text-blue-300 font-medium transition-colors group">
        Read more 
        <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
    </a>
</article>