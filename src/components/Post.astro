---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
    post: CollectionEntry<'posts'>;
    isHidden: boolean;
};

const { post, isHidden } = Astro.props;
---

<article class={`post ${isHidden ? 'hidden' : ''}`}>
    <a href={`/${post.slug}`}>
        <Image 
            src={post.data.image}
            width={600}
            height={600 / 1.5}
            alt={post.data.title}
            class="rounded-2xl shadow-xl mb-4 object-cover"
        />
    </a>

    <a 
        href={`/blog/${post.slug}`}
        class="text-4xl text-zinc-500 font-semibold inline-block"
    >
        <h2>{post.data.title}</h2>
    </a>

    <p class="text-zinc-500 text-2xl line-clamp-2">
        {post.body}
    </p>
</article>